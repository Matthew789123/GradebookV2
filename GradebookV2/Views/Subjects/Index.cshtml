@model IEnumerable<GradebookV2.Models.Subject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage subjects</h2>

@if (Model.Count() != 0)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SubjectId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SubjectId }, new { onclick = "return confirm('Are you sure you wish to delete this subject?');" })
                </td>
            </tr>
        }

    </table>
}
else 
{ 
    <p>
        There is no subjects.
        @Html.ActionLink("Create New", "Create")
    </p>
}

